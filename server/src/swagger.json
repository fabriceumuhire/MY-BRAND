        "/login": {
            "post": {
                "tags": [
                "Users"
                ],
                "description": "Login user",
                "parameters": [
                {
                    "name": "login",
                    "in": "body",
                    "description": "User to log",
                    "schema": {
                    "$ref": "./models/User"
                    }
                }
                ],
                "produces": [
                "application/json"
                ],
                "responses": {
                "200": {
                    "description": "Get Token",
                    "schema": {
                    "$ref": "/login"
                    }
                }
                }
            }
        },
