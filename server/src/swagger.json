                    "name": "register",
                    "in": "body",
                    "description": "User to be created",
                    "schema": {
                    "$ref": "./models/User"
                    }
                }
                ],
                "produces": [
                "application/json"
                ],
                "responses": {
                "200": {
                    "description": "Get created user",
                    "schema": {
                    "$ref": "/register"
                    }
                }
                }
            },
            "get": {
                "tags": [
                "Users"
